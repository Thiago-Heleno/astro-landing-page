---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<base href={import.meta.env.BASE_URL} />
		<meta charset="UTF-8" />
		<meta
      name="description"
      content="John Doe is a skilled attorney in [Practice Area] serving clients in [Location]. Contact us for expert legal guidance and representation."
    />
		<link rel="icon" type="image/svg+xml" href="./favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>


		<!-- Basic SEO Meta Tags -->
    <meta
      name="viewport"
      content="width=device-width"
    />

    
    <meta name="robots" content="index, follow" />
    <meta name="author" content="John Doe" />

    <!-- Open Graph Meta Tags for Social Media Sharing -->
    <meta
      property="og:title"
      content="John Doe - Experienced Attorney in [Location]"
    />
    <meta
      property="og:description"
      content="Looking for an expert lawyer? John Doe offers legal services in [Practice Area] with dedication and experience."
    />
    <meta property="og:image" content="https://example.com/image.jpg" />
    <!-- Add a real image URL -->
    <meta property="og:url" content="https://example.com" />
    <meta property="og:type" content="website" />
    <meta property="og:phone_number" content="+1-234-567-8900" />
    <meta property="og:email" content="contact@example.com" />

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content="John Doe - Experienced Attorney in [Location]"
    />
    <meta
      name="twitter:description"
      content="Contact John Doe, your reliable attorney in [Practice Area] for quality legal services."
    />
    <meta name="twitter:image" content="https://example.com/image.jpg" />
    <!-- Add a real image URL -->

    <!-- Keywords for Search Engines (Less Important but Helpful) -->
    <meta
      name="keywords"
      content="lawyer, attorney, [Practice Area], [Location], legal advice, law firm, John Doe, legal consultation"
    />

    <!-- Canonical URL -->
    <link rel="canonical" href="https://example.com" />

    <!-- Structured Data for Lawyers using JSON-LD -->
    <script type="application/ld+json">
      {
        "@context": "http://schema.org",
        "@type": "LegalService",
        "name": "John Doe, Attorney at Law",
        "url": "https://example.com",
        "logo": "https://example.com/logo.png",
        "image": "https://example.com/image.jpg",
        "description": "Experienced attorney specializing in [Practice Area] law in [Location].",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "123 Main St",
          "addressLocality": "[City]",
          "addressRegion": "[State]",
          "postalCode": "12345",
          "addressCountry": "US"
        },
        "contactPoint": {
          "@type": "ContactPoint",
          "telephone": "+1-234-567-8900",
          "contactType": "Customer Service"
        },
        "areaServed": "US",
        "sameAs": [
          "https://linkedin.com/in/johndoe",
          "https://twitter.com/johndoe"
        ]
      }
    </script>

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "BreadcrumbList",
        "itemListElement": [
          {
            "@type": "ListItem",
            "position": 1,
            "name": "Home",
            "item": "https://example.com"
          },
          {
            "@type": "ListItem",
            "position": 2,
            "name": "About",
            "item": "https://example.com/about"
          },
          {
            "@type": "ListItem",
            "position": 3,
            "name": "Services",
            "item": "https://example.com/services"
          }
        ]
      }
    </script>
	
	</head>
	<body>
		<slot />
	</body>
</html>